<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.greencredit_program.CreateUserController" alignment="CENTER" spacing="20">
    <padding><Insets top="50" right="50" bottom="50" left="50"/></padding>
    <Label text="Create New User" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #212121;" />

    <TextField fx:id="newUsernameField" promptText="Username" style="-fx-pref-width: 300px; -fx-font-size: 14px; -fx-padding: 10px; -fx-background-color: #FFFFFF; -fx-border-color: #BDBDBD; -fx-border-radius: 5px;" />

    <PasswordField fx:id="newPasswordField" promptText="Password" style="-fx-pref-width: 300px; -fx-font-size: 14px; -fx-padding: 10px; -fx-background-color: #FFFFFF; -fx-border-color: #BDBDBD; -fx-border-radius: 5px;" />

    <CheckBox fx:id="isCompanyCheckbox" text="Register as Company" style="-fx-font-size: 14px; -fx-text-fill: #757575;" />

    <Button text="Create User" onAction="#handleCreateUser" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 200px; -fx-padding: 10px; -fx-background-radius: 5px;" />

    <Button text="Back to Login" onAction="#handleBackToLogin" style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 200px; -fx-padding: 10px; -fx-background-radius: 5px;" />
</VBox>
